@model IEnumerable<ASM_NET104.Models.Carts>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<style>
    .table td img {
        width: 50px;
        height: 50px;
    }
</style>
<table class="table">
    @foreach (var item in ViewBag.cart)
    {
        <tr>
            <td>
                <img src="~/images/@item.Product.ProductImage"  width="50"; height="50"/>
            </td>
            <td>
                <strong>@item.Product.ProductName</strong>
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                <strong>@(item.Product.Price * item.Quantity)</strong>
            </td>
            <td>
                <a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id"><img src="~/images/trashCan.png" /></a>
            </td>
        </tr>
    }
</table>
<br />
<hr />
<a asp-controller="Home" asp-action="Index">Continue Shopping</a>

