@model IEnumerable<ASM_NET104.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<style>
    * {
        box-sizing: border-box;
        font-family: 'Segoe UI';
    }

    .colum {
        position: relative;
        width: 21%;
        display: inline-block;
        height: 500px;
        margin: 20px
    }

    .hinhsp > img {
        width: 80%;
        height: 200px;
        margin-bottom: 20px
    }

    .ten {
        color: darkblue;
        font-size: larger;
    }

    .gia {
        color: darkcyan;
        font-weight: bold;
        font-size: x-large;
    }

    .middleContent {
        margin-bottom: 20px;
    }

    table {
        color: darkcyan;
        font-size: 14px;
    }

    tr td:nth-child(1) {
        font-weight: bold;
    }

    td {
        padding: 5px;
    }
</style>
@foreach (var item in Model)
{
    <div class="colum">
        <a href="#"><div class="hinhsp"> <img src="~/images/@item.ProductImage" alt=""></div></a>
        <div class="middleContent">
            <div class="ten">@Html.DisplayFor(modelItem => item.ProductName)</div>
            <div class="gia">@Html.DisplayFor(modelItem => item.Price)<sup>đ</sup></div>
        </div>
        <table>
            <tr>
                <td>Mô tả:</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
            </tr>
            <tr>
                <td>
                    <a asp-controller="cart" asp-action="buy" asp-route-id="@item.Id" class="btn btn-info btn-lg">Add to cart</a>
                </td>
                <td>
                    <a href="#" class="btn btn-info btn-lg">Mua ngay</a>
                </td>
            </tr>
        </table>
    </div>
}
